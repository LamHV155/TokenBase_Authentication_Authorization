@model WebApp.Dtos.PostLoginDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div>
                    <label for="userNameInput">UserName</label>
                    <input type="text" id="userNameInput" placeholder="Input UserName" asp-for="UserName" />
                </div>
                <div>
                    <label for="passwordInput">Password</label>
                    <input type="password" id="passwordInput" placeholder="Input Password" asp-for="Password" />
                </div>
                <button type="submit"  class="btn btn-primary mt-3">Login</button>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
